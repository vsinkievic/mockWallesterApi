    <changeSet id="20250423104304-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/fake-data/account_statement_record.csv"
                  separator=";"
                  tableName="account_statement_record"
                  usePreparedStatements="true">
